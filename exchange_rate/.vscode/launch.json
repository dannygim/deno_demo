    "version": "0.2.0",
    "configurations": [
        {
            "request": "launch",
            "name": "Exchange Rates: Update",
            "type": "pwa-node",
            "cwd": "${workspaceFolder}",
            "runtimeExecutable": "/opt/homebrew/bin/deno",
            "runtimeArgs": [
                "run",
                "--unstable",
                "--inspect-brk",
                "--allow-all",
                "./main.ts",
                "update"
            ],
            "attachSimplePort": 9229
        },
        {
            "request": "launch",
            "name": "Exchange Rates: List",
            "type": "pwa-node",
            "cwd": "${workspaceFolder}",
            "runtimeExecutable": "/opt/homebrew/bin/deno",
            "runtimeArgs": [
                "run",
                "--unstable",
                "--inspect-brk",
                "--allow-all",
                "./main.ts",
                "list"
            ],
            "attachSimplePort": 9229
        }
    ]
}
